<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp"
    android:paddingBottom="4dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="#000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/textView5"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="1"
            android:id="@+id/one"
            android:textSize="40dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:background="#f16868"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="userInput" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="2"
            android:id="@+id/two"
            android:textSize="40dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:background="#f16868"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/one"
            android:layout_marginLeft="6dp"
            android:onClick="userInput" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="3"
            android:id="@+id/three"
            android:textSize="40sp"
            android:gravity="center_vertical|center|center_horizontal"
            android:background="#f16868"
            android:layout_alignTop="@+id/two"
            android:layout_toEndOf="@+id/two"
            android:layout_marginLeft="6dp"
            android:onClick="userInput" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="4"
            android:id="@+id/four"
            android:textSize="40dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:background="#f16868"
            android:layout_marginLeft="6dp"
            android:layout_alignTop="@+id/three"
            android:layout_toStartOf="@+id/five"
            android:onClick="userInput" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="5"
            android:id="@+id/five"
            android:textSize="40dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:background="#f16868"
            android:layout_marginLeft="6dp"
            android:layout_alignTop="@+id/four"
            android:layout_toStartOf="@+id/six"
            android:onClick="userInput" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="6"
            android:id="@+id/six"
            android:textSize="40dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:background="#f16868"
            android:layout_marginLeft="6dp"
            android:layout_alignTop="@+id/five"
            android:layout_alignParentEnd="true"
            android:onClick="userInput" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:checked="false"
            android:background="#a12c2c"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/textView6"
            android:layout_above="@+id/three"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/textView17"
            android:background="#ffffff"
            android:layout_below="@+id/one"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/playerTurn"
            android:layout_above="@+id/textView6"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/oppTurn"
            android:layout_alignBottom="@+id/oppteamname"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE: 0 / 0"
            android:id="@+id/Score"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERS: 0.0"
            android:id="@+id/Overs"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_above="@+id/playerTurn"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAYER"
            android:id="@+id/playerteamname"
            android:layout_alignBottom="@+id/playerTurn"
            android:layout_alignParentEnd="true"
            android:textColor="#8181f5"
            android:textStyle="bold"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMP"
            android:id="@+id/oppteamname"
            android:textColor="#8181f5"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Outcome"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:layout_below="@+id/textView17"
            android:layout_alignStart="@+id/five"
            android:layout_marginTop="24dp"
            android:alpha="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/playerturn"
            android:layout_above="@+id/playerteamname"
            android:layout_alignParentEnd="true"
            android:alpha="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/oppturn"
            android:layout_above="@+id/oppteamname"
            android:layout_alignParentEnd="true"
            android:alpha="0" />

    </RelativeLayout>
</RelativeLayout>
