<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.handcricket.com22.mydtu.GamePlay"
    android:id="@+id/rel"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/details"
        android:weightSum="1"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Player Name"
            android:id="@+id/name"
            android:textColor="#f1f1f1"
            android:textSize="40dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress"
        android:thumb="@drawable/thumb"
        android:progress="20"
        android:layout_below="@+id/wickets"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Of Wickets :"
        android:id="@+id/wickets"
        android:textSize="40dp"
        android:textColor="#f1f1f1"
        android:layout_gravity="top|left|bottom|center|right"
        android:textStyle="bold"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_weight="1"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress"
        android:thumb="@drawable/thumb"
        android:progress="20"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/overs"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Of Overs :"
        android:id="@+id/overs"
        android:textSize="40dp"
        android:textColor="#f1f1f1"
        android:textStyle="bold"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="NEXT"
        android:id="@+id/button8"
        android:background="#1c5a02"
        android:textSize="35dp"
        android:onClick="goButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView9"
        android:textSize="48dp"
        android:layout_below="@+id/seekBar"
        android:layout_toStartOf="@+id/wickets"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/textView10"
        android:textSize="48dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/textView11"
        android:textSize="48dp"
        android:textColor="#f66a6a"
        android:textStyle="bold"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView12"
        android:textSize="48dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/seekBar2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/textView13"
        android:textSize="48dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/textView14"
        android:textSize="48dp"
        android:textColor="#f66a6a"
        android:textStyle="bold"
        android:layout_below="@+id/seekBar2"
        android:layout_alignStart="@+id/textView11" />

</RelativeLayout>
